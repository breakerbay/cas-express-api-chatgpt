{
  "compilerOptions": {
    "outDir": "./dist",  // Output JavaScript files to the dist folder
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}